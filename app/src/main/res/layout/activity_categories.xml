<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/gradient_background">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="#B242ED"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Category"
            android:gravity="center"
            android:textSize="30sp"
            android:background="#C50A7B"
            android:textColor="#6A1B9A"
            android:id="@+id/tvCategory"/>
    <!-- Button for C Quiz -->
    <Button
        android:id="@+id/btnCQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C Quiz"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Button for Python Quiz -->
    <Button
        android:id="@+id/btnPythonQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Python Quiz"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Button for Java Quiz -->
    <Button
        android:id="@+id/btnJavaQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java Quiz"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Button for JavaScript Quiz -->
    <Button
        android:id="@+id/btnJavaScriptQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JavaScript Quiz"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Button for HTML Quiz -->
    <Button
        android:id="@+id/btnHtmlQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HTML Quiz"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>


    </LinearLayout>


</ScrollView>
