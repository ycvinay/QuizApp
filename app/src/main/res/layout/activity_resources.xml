<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Language Resources"
        app:titleTextColor="@android:color/white"
        android:elevation="4dp" />

    <!-- Content area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- C Programming Resources -->
            <TextView
                android:id="@+id/tvCResources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C Programming Resources"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:linksClickable="true"
                android:autoLink="web"
                />

            <!-- Python Resources -->
            <TextView
                android:id="@+id/tvPythonResources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python Resources"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:linksClickable="true"
                android:autoLink="web"
                />

            <!-- Java Resources -->
            <TextView
                android:id="@+id/tvJavaResources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java Resources"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:linksClickable="true"
                android:autoLink="web"
                />

            <!-- JavaScript Resources -->
            <TextView
                android:id="@+id/tvJavaScriptResources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JavaScript Resources"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:linksClickable="true"
                android:autoLink="web"
                />

            <!-- HTML Resources -->
            <TextView
                android:id="@+id/tvHtmlResources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HTML Resources"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:linksClickable="true"
                android:autoLink="web"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
